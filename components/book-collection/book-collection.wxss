.collection-view {
  height: 100%;
  padding: 32rpx;
  overflow-y: auto;
}

.collection-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.book-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book-cover {
  width: 200rpx;
  height: 280rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.book-title {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}
