.audio-player {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.vinyl-record {
  width: 500rpx;
  height: 500rpx;
  margin-bottom: 60rpx;
}

.vinyl-record.playing {
  animation: rotate 3s linear infinite;
}

.record-image {
  width: 100%;
  height: 100%;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.chapter-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  text-align: center;
}
