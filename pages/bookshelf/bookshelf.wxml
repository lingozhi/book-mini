<view class="container">

  <scroll-view scroll-y class="book-grid">
    <view class="book-list">
      <view class="book-item" 
            wx:for="{{books}}" 
            wx:key="id"
            bindtap="onBookTap"
            data-id="{{item.id}}"
            bindlongpress="onLongPress">
        <view class="book-wrapper {{isEditing ? 'editing' : ''}}">
          <image class="book-cover" 
                 src="{{item.coverUrl}}" 
                 mode="aspectFill"
                 lazy-load></image>
          <view class="delete-btn" wx:if="{{isEditing}}" 
                catchtap="onDeleteBook" 
                data-id="{{item.id}}">
            <image class="delete-icon" src="/images/icons/delete.png"></image>
          </view>
        </view>
        <text class="book-title">{{item.title}}</text>
        <text class="book-author">{{item.author}}</text>
      </view>
    </view>
  </scroll-view>


</view> 