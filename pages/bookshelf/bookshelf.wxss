.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #ffffff;
}

.book-grid {
  flex: 1;
  padding: 24rpx 32rpx;
}

.book-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx 24rpx;
}

.book-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book-cover {
  width: 210rpx;
  height: 280rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.book-title {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #333;
  text-align: center;
  width: 210rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tab-bar {
  height: 98rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 0;
}

.tab-item.active {
  color: #ff6b81;
}

.tab-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 6rpx;
}

.add-button {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #ff6b81, #ff8c9f);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 129, 0.3);
}

.add-button .tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin: 0;
}
