<view class="container">
  <view class="header-bg"></view>
  <view class="content">
    <view class="user-info">
      <image class="avatar" src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}"></image>
      <text class="nickname">{{userInfo.nickName || '兰瑞莎'}}</text>
    </view>

    <view class="menu-list">
      <view class="menu-item" bindtap="onMenuTap" data-type="service">
        <text>用户服务协议</text>
        <image class="arrow" src="/images/icons/arrow-right.png"></image>
      </view>
      <view class="menu-item" bindtap="onMenuTap" data-type="privacy">
        <text>隐私协议</text>
        <image class="arrow" src="/images/icons/arrow-right.png"></image>
      </view>
    </view>

    <view class="logout-btn" bindtap="logout">退出登录</view>
  </view>
</view> 